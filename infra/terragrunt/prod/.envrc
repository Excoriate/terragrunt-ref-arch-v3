#!/usr/bin/env bash
# Production Environment Configuration
#
# This file provides a flexible configuration point for production-specific
# environment variables. It inherits from parent configurations and allows
# for environment-specific customizations.
#
# CUSTOMIZATION GUIDE:
# 1. Uncomment and modify the variables below to suit your production needs
# 2. Add new variables following the _safe_export pattern
# 3. Override global variables or add production-specific configurations
# 4. Use _display_exported_vars to see current environment setup

# Ensure PROJECT_ROOT is set
PROJECT_ROOT="${PROJECT_ROOT:-$(cd "$(dirname "${BASH_SOURCE[0]}")/../.." && pwd)}"
export PROJECT_ROOT

# Source parent .envrc for inheritance
source_up || true

# Source the shared utility functions
source "${PROJECT_ROOT}/scripts/envrc-utils.sh"

# Production Environment Variables
# Uncomment and modify these variables as needed:
# _safe_export PROD_ENVIRONMENT_TYPE "production"
# _safe_export PROD_RESOURCE_LIMITS "high"
# _safe_export AWS_PROFILE "prod"
# _safe_export TG_INSTANCE_TYPE "m5.large"
# _safe_export TG_MAX_CAPACITY "10"
# _safe_export TG_MIN_CAPACITY "2"
# _safe_export TG_ENABLE_ENHANCED_MONITORING "true"
# _safe_export TG_BACKUP_RETENTION_DAYS "30"

# Display exported variables (optional)
_display_exported_vars "PROD_"
